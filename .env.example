# AWS Bedrock App Generator - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# AWS Configuration
# ============================================================================

# AWS Region (Bedrock available in: us-east-1, us-west-2, eu-central-1, etc.)
AWS_REGION=us-east-1

# AWS Bedrock Model ID (Claude 3.5 Sonnet inference profile)
AWS_BEDROCK_MODEL=us.anthropic.claude-3-5-sonnet-20241022-v2:0

# AWS Profile to use (default: default)
# AWS_PROFILE=production

# AWS Access Key (if not using credentials file)
# AWS_ACCESS_KEY_ID=your_access_key

# AWS Secret Access Key (if not using credentials file)
# AWS_SECRET_ACCESS_KEY=your_secret_key

# ============================================================================
# Application Configuration
# ============================================================================

# Output directory for generated applications
OUTPUT_DIR=./generated_apps

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode
DEBUG=False

# ============================================================================
# Generation Configuration
# ============================================================================

# Maximum tokens for model responses
MAX_TOKENS=2048

# Temperature for generation (0.0-1.0, lower = more deterministic)
TEMPERATURE=0.7

# Number of retries on throttling
MAX_RETRIES=3

# Initial retry delay in seconds
RETRY_DELAY=2

# Delay between API calls in seconds (to avoid throttling)
API_CALL_DELAY=0.5

# ============================================================================
# Optional: Enterprise Configuration
# ============================================================================

# HTTP Proxy (if behind corporate firewall)
# HTTP_PROXY=http://proxy.company.com:8080
# HTTPS_PROXY=https://proxy.company.com:8080

# Custom CA Certificate (if required)
# AWS_CA_BUNDLE=/path/to/ca-bundle.crt

# Company-specific variables
# COMPANY_NAME=My Company
# COMPANY_DOMAIN=company.com
# TEAM_NAME=Platform Team
